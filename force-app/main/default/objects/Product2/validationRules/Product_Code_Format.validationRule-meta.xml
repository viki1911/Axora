<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Product_Code_Format</fullName>
    <active>true</active>
    <description>Check Product Code format</description>
    <errorConditionFormula>NOT( 
  REGEX(ProductCode, &quot;AX[0-9]{5}-[0-9]{2}&quot;) 
)</errorConditionFormula>
    <errorDisplayField>ProductCode</errorDisplayField>
    <errorMessage>Product Code does not match AX00000-00 format</errorMessage>
</ValidationRule>
